{
  "name": "cloud-best-practice-analyzer-backend",
  "version": "1.0.0",
  "description": "Backend infrastructure for Cloud Best Practice Analyzer",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "deploy:all": "cdk deploy --all",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-lambda-powertools/batch": "^2.8.0",
    "@aws-lambda-powertools/idempotency": "^2.8.0",
    "@aws-lambda-powertools/logger": "^2.22.0",
    "@aws-lambda-powertools/metrics": "^2.22.0",
    "@aws-lambda-powertools/parameters": "^2.22.0",
    "@aws-lambda-powertools/parser": "^2.8.0",
    "@aws-lambda-powertools/tracer": "^2.22.0",
    "@aws-sdk/client-bedrock": "^3.400.0",
    "@aws-sdk/client-bedrock-runtime": "^3.400.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.839.0",
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/client-eventbridge": "^3.839.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/client-ssm": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.839.0",
    "@middy/core": "^6.3.2",
    "aws-cdk-lib": "^2.100.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.100.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
